# HashBot Configuration

# =============================================================================
# Telegram Bot
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# =============================================================================
# HashKey Chain
# =============================================================================
# 主网
HASHKEY_RPC_URL=https://mainnet.hashkeychain.io
HASHKEY_CHAIN_ID=133

# 测试网 (推荐开发使用)
# HASHKEY_RPC_URL=https://hashkeychain-testnet.alt.technology
# HASHKEY_CHAIN_ID=177

# 钱包私钥 (仅用于开发，生产环境使用 HSM/KMS)
# 警告：永远不要在代码或公开仓库中暴露私钥
WALLET_PRIVATE_KEY=your_private_key_here

# 收款地址
MERCHANT_ADDRESS=0x...

# =============================================================================
# x402 Payment Settings
# =============================================================================
# HKDC 稳定币合约地址 (HashKey Chain)
HKDC_CONTRACT_ADDRESS=0x...

# 默认支付超时 (秒)
PAYMENT_TIMEOUT=300

# =============================================================================
# A2A Protocol
# =============================================================================
# Agent Card URL
AGENT_CARD_URL=https://your-domain.com/.well-known/agent.json

# Agent 名称和描述
AGENT_NAME=HashBot
AGENT_DESCRIPTION=AI Agent with x402 payment support on HashKey Chain

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./hashbot.db

# =============================================================================
# OpenClaw Gateway
# =============================================================================
# OpenClaw 网关地址 (本地运行: openclaw gateway --port 18789)
OPENCLAW_GATEWAY_URL=http://localhost:18789
OPENCLAW_GATEWAY_TOKEN=your_openclaw_token

# Agent 工作区目录
OPENCLAW_WORKSPACES_DIR=~/.hashbot/workspaces

# 默认 AI 模型
DEFAULT_AGENT_MODEL=claude-sonnet-4-20250514

# 每用户最大 Agent 数量
MAX_AGENTS_PER_USER=3

# =============================================================================
# Wallet Encryption
# =============================================================================
# Fernet 密钥 (用于加密钱包私钥)
# 生成: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
WALLET_ENCRYPTION_KEY=

# =============================================================================
# Security
# =============================================================================
# API 密钥 (用于内部服务认证)
API_SECRET_KEY=your_secret_key_here

# JWT 设置
JWT_SECRET=your_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
